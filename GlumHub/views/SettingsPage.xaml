<Page x:Class="GlumHub.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlumHub"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SettigsPage">

    <Page.DataContext>
        <local:SettigsPageVM></local:SettigsPageVM>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Button Command="{Binding SwitchAppearanceCommand}" Content="{DynamicResource SwitchAppearanceButton}" FontSize="20" Width="200" Height="50" HorizontalAlignment="Left" Margin="20, 20, 0, 0"></Button>
            <Button Command="{Binding SwitchLanguageCommand}" Content="{DynamicResource SwitchLanguageButton}" FontSize="20" Width="200" Height="50" HorizontalAlignment="Left" Margin="20, 20, 0, 0"></Button>

        </StackPanel>
    </Grid>
</Page>
