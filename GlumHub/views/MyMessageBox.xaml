<Window x:Class="GlumHub.views.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlumHub.views" Background="#FFF2E1"
        mc:Ignorable="d" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="message" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" FontSize="18">Message</Label>
        <Button Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 10, 10" Width="70" Height="30">Ok</Button>
    </Grid>
</Window>
